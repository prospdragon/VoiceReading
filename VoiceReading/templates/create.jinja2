{% extends "layout.jinja2" %}

{% block content %}
    <form method="post" action="{{ url_for('main_bp.create_voice') }}" name="form_create" id="form_create" enctype="multipart/form-data">
        <div class="row gutters control-container">
            <div class="col">
                <div class="input-panel">
                    <select name="voice" id="voice">
                        <option value="0">Select Voice</option>
                        {% for voice in voices %}
                            <option value="{{ voice }}">{{ voice }}</option>
                        {% endfor %}
                    </select>
                </div>
            </div>
            <div class="col">
                <div class="input-panel">
                    <input type="text" name="voice_name" id="voice_name" placeholder="Enter voice name" required>
                </div>
            </div>
            <div class="col">
                <div class="voice-controls">
                    <div class="voice-control">
                        <span class="fileinput-block">
                            <input type="file" class="inp-audio" name="audio1" id="audio1" accept="audio/wav">
                        </span>
                    </div>
                    <div class="voice-control">
                        <a href="#" class="btn-record" data-recording="false" data-index="1">
                            <img src="{{ url_for('static', filename='dist/img/mic.png') }}">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="voice-controls">
                    <div class="voice-control">
                        <span class="fileinput-block">
                            <input type="file" class="inp-audio" name="audio2" id="audio2" accept="audio/wav">
                        </span>
                    </div>
                    <div class="voice-control">
                        <a href="#" class="btn-record" data-recording="false" data-index="2">
                            <img src="{{ url_for('static', filename='dist/img/mic.png') }}">
                        </a>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="voice-controls">
                    <div class="voice-control">
                        <span class="fileinput-block">
                            <input type="file" class="inp-audio" name="audio3" id="audio3" accept="audio/wav">
                        </span>
                    </div>
                    <div class="voice-control">
                        <a href="#" class="btn-record" data-recording="false" data-index="3">
                            <img src="{{ url_for('static', filename='dist/img/mic.png') }}">
                        </a>
                    </div>
                </div>
            </div>
            <div>
                <button type="submit" class="btn btn-main">
                    <img src="{{ url_for('static', filename='dist/img/play.png') }}">
                    CREATE
                </button>
            </div>
        </div>
        <input type="hidden" name="record1" value="">
        <input type="hidden" name="record2" value="">
        <input type="hidden" name="record3" value="">
    </form>
    <form method="post" id="form-text" name="form_text" action="{{ url_for('main_bp.speech_all') }}">
        <div class="text-container">
            <div class="text-panel">
                <div id="main_text" class="main_text" contenteditable="true">
                </div>
            </div>
            <div class="control-panel">
                <button class="btn btn-main">
                    <img src="{{ url_for('static', filename='dist/img/play.png') }}">
                    Convert & Download
                </button>
            </div>
        </div>
        <input type="hidden" name="sentence_data">
    </form>
    <div class="control-template d-none">
        <div class="side-controls" data-index="-1">
            <a href="#" class="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <img src="{{ url_for('static', filename='dist/img/mic.png') }}">
            </a>
            <div class="dropdown-menu">
                <h6 class="dropdown-header">Apply different voice</h6>
                {% for voice in voices %}
                    <button class="dropdown-item" type="button">{{ voice }}</button>
                {% endfor %}
            </div>
            <a href="#" class="play-sentence">
                <img src="{{ url_for('static', filename='dist/img/play-circle.png') }}">
            </a>
        </div>
    </div>

    <audio id="sentence-audio" src=""></audio>
{% endblock %}
